---
export interface Props {
  label: string;
}

const { label } = Astro.props;
---

<span
  class="badge"
>
  <svg
    class="badge-icon"
    fill="currentColor"
    viewBox="0 0 8 8"
  >
    <circle cx="4" cy="4" r="3" />
  </svg>
  {label}
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.625rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    background-color: #e0f2fe;
    color: #0c4a6e;
    border: 1px solid #bae6fd;
  }

  .badge-icon {
    margin-left: -0.125rem;
    margin-right: 0.375rem;
    height: 0.5rem;
    width: 0.5rem;
    color: #38bdf8;
  }
</style>
